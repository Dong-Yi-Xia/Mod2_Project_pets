
<div class="pets_container">
    <div class="row"> 
            <% @pets.each do |pet| %>
                <div class="col-sm-6 col-md-4 col-lg-3">
                     <div class="card">
                        <a href = <%= pet_path(pet) %> >
                        <%= image_tag (pet.image_url), class: "card-img-top"%> 
                        </a>
                        <div class="card-body">
                            <h5 class="card-title"><%= pet.name %></h5>
                            <p class="card-text"> <%= pet.bio[0..50]%>....</p>
                            <a href= <%= pet_path(pet) %> class="btn btn-primary" >Read More</a>
                        </div>    
                    </div>   
             </div>
            <% end %>
    </div> 
</div>