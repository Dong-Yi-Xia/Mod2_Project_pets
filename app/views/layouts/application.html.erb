<!DOCTYPE html>
<html>
  <head>
    <title>PetsProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav>
      <a><%=link_to "Home", home_path %></a>
      <%if logged_in_status %>
      <a><%=link_to "All Pets", pets_path %></a>
        <a><%=link_to "My Profile", user_path(@current_user) %></a>
        <a><%=link_to "New Review", new_review_path %></a>
      <%end%>
      <a>About</a>
      <a>Contact</a>
    </nav>
    <br>
    <hr>
    <br>

  <% if logged_in_status %>

      <nav>
        <h2>Welcome <%= @current_user.name.titleize %>! </h2>
        <br>
        <%= button_to "Log Out", logout_path, method: :delete %>
        
      </nav>

    <% else %>
      <nav> 
        <%= button_to "Login", login_path, method: :get%> <br>
        <%= button_to "Signup", signup_path, method: :get%>
      </nav>

  <%end%>

    <%= yield %>
  </body>
</html>
