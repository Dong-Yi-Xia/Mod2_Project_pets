<h1> users/new </h1>
<h1> Hello World </h1>

<% if @errors %>
    <% @errors.each do |error| %>
     <p style= "color:red ">  <%= error%>  </p>
    <%end%>
<%end%>

<h2> Create a new account </h2>

<%= form_for @user do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <%= f.label :password %> <br>
    <%= f.password_field :password%><br>
    <%= f.password_field :password_confirmation%><br>
    <%= f.submit "Sign Up Now"%>
<%end%>