<h1> users/show </h1>
<h1> Hello World </h1>


<h3>My Reviews</h3>
    <% @current_user.reviews.each do |review|%>
        Name of Pet: <%= link_to review.pet.name, pet_path(review.pet) %><br>
        Species: <%= review.pet.species %><br>
        My Rating: <%= review.rating %><br>
        My Review: <%= review.content %><br>
        <br>
<%end%>

<h3>My Pet Rentals</h3>
    <% @current_user.rents.each do |rent|%>
        Name of Pet: <%= link_to rent.pet.name, pet_path(rent.pet) %><br>
        Species: <%= rent.pet.species %><br>
        Duration: <%= rent.duration%> Minutes <br>
        Location: <%= rent.location%> <br>
        <br>
<%end%>