<h1>Login Page</h1>  

<div class="error_message">
<% if @error %>
     <%= @error%> <p>
<%end%>
</div>

<h2> Log In </h2>

<%= form_tag "/login_form" do  %>
    <%= label_tag :name %><br>
    <%= text_field_tag :name %><br>
    <%= label_tag :password %> <br>
    <%= password_field_tag :password %><br>
    <%= submit_tag "Log In"%>
<%end%>