<h1> rents/edit </h1>

<h1>Rent a Pet!</h1>

<%= form_for @rent do |f| %>
    <%= f.label "Pet's Name" %>
    <%= f.collection_select :pet_id, Pet.all, :id, :name %>
    <br>
    <br>
    <%= f.label 'Duration:' %><br></strong>
    <%= f.radio_button :duration, 30 %> 30 minutes
    <%= f.radio_button :duration, 60 %> 60 minutes
    <%= f.radio_button :duration, 90 %> 90 minutes
    <%= f.radio_button :duration, 120 %> 120 minutes
    <br><br>
  
    <%= f.label 'location:' %><br></strong>
    <%= f.radio_button :location, "Manhattan" %> Manhattan
    <%= f.radio_button :location, "Queens" %> Queens
    <%= f.radio_button :location, "Brooklyn" %> Brooklyn
    <%= f.radio_button :location, "Bronx" %> Bronx
    <%= f.radio_button :location, "Staten Island" %> Staten Island<br><br>
    <br>

    <%= f.submit "Rent this pet!"%>

<% end %>